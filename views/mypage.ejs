<!DOCTYPE html>
<html lang="ko">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>마이페이지</title>
</head>

<body>
  <% if(is_logined==false){ %>
    <table width="30%">
      <tr>
        <td><a href="/">Home</a></td>
        <td><a href="/login">로그인</a></td>
        <td><a href="/register">회원가입</a></td>
      </tr>
    </table>
    <% }else{ %>
      <table width=30%>
        <tr>
          <td><a href="/index/<%= id %>">Home</a></td>
          <td><a href="/list/<%= id %>">거래내역</a></td>
          <td>
            <%= name %> 님 환영합니다!
          </td>
          <td><a href="/mypage/<%= id %>">마이페이지</a></td>
          <td><a href="/logout">로그아웃</a></td>
        </tr>
      </table>
      <% } %>

        <% user.forEach(function (value) { %>
          <form action="/update/<%= id %>" method="post">
            아이디 <input type="text" name="id" value="<%= id %>"><br>
            비밀번호 <input type="text" name="pw" value="<%= pw %>"><br>
            이름 <input type="text" name="name" value="<%= name %>"><br>
            이메일 <input type="email" name="email" value="<%= email %>"><br>
            <button type="submit">수정</button>
          </form>
          <% }); %>
</body>

</html>